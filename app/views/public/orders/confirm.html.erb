<%= render 'public/homes/header' %>

<h2>注文情報確認</h2>
<table>
 <thead>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
   </thead>
   <tbody>
       <% @cart_items.each do |cart_item| %>
       <tr>
         <td><%= cart_item.item.name %></td>
         <td><%= cart_item.item.with_tax_price %></td>
         <td><%= cart_item.amount %></td>
         <td><%= cart_item.subtotal %></td>
         <% @total += (cart_item.item.with_tax_price) *(cart_item.amount) %>
         <% end %>
   </tbody>
</table>

<table>
 <thead>
    <th>送料</th>
    <th>商品合計</th>
    <th>請求金額</th>
   </thead>
   <tbody>
       <tr>
         <td><%= @order.shipping_cost %></td>
         <td><%= @total %></td>
         <td><%= @order.shipping_cost + @total %></td>
       </tr>
   </tbody>
</table>

<h4>支払方法</h4>
<%= @order.payment_method_i18n %>
<h4>お届け先</h4>
<%= "〒"+@order.postal_code+@order.address %><br>
<%= @order.name %><br>

<%= form_with model: Order.new,url:public_orders_path do |f| %>
  <%= f.hidden_field :payment_method, :value => @order.payment_method %>
  <%= f.hidden_field :postal_code, :value => @order.postal_code %>
  <%= f.hidden_field :address, :value => @order.address %>
  <%= f.hidden_field :name, :value => @order.name %>
  <%= f.hidden_field :total_payment, :value => @order.shipping_cost + @total %>
  <%= f.submit '注文を確定する' %>
<% end %>




