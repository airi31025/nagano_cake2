<%= render 'public/homes/header' %>
<div class="container">
  <div class="row">

<h2>注文履歴詳細</h2>
  </div>
  <div class="col-sm-8">
  <h4>注文情報</h4>
  <table class="table table-hover table-bordered">
  <thead>
    <th>注文日</th>
    <th>配送先</th>
    <th>支払方法</th>

   </thead>
   <tbody>

       <tr>
         <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
         <td>
           <%= "〒"+@order.postal_code %><br>
           <%= @order.address %><br>
           <%= @order.name %>
         </td>
         <td><%= @order.payment_method_i18n %></td>

       </tr>
   </tbody>
</table >
</div>
<div class="col-sm-4">
  <h4>請求情報</h4>
  <table class="table table-hover table-bordered">
   <tbody>
     <tr>
       <td>商品合計</td>
       <td><%= @order.total_payment %></td>
     </tr>
    <tr>
      <td>配送料</td>
      <td><%= @order.shipping_cost %></td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td><%= @order.total_payment+@order.shipping_cost %></td>
   </tr>

   </tbody>
</table>
</div>

  <h4>注文内容</h4>
  <table class="table table-hover table-bordered">
  <thead>
    <th>商品</th>
    <th>単価（税込）</th>
    <th>個数</th>
    <th>小計</th>
   </thead>
   <tbody>
       <% @order_details.each do |order_detail| %>
       <tr>
         <td><%= order_detail.item.name %></td>
         <td><%= order_detail.item.with_tax_price %></td>
         <td><%= order_detail.amount %></td>
         <td><%= order_detail.subtotal %></td>
         <!--<%# @total += (order_detail.item.with_tax_price) *(order_detail.amount) %>-->
         </tr>
         <% end %>
   </tbody>
</table>
</div>

