<%= render 'public/homes/header' %>

<h2>注文履歴詳細</h2>

  <h4>注文情報</h4>
  <table>
  <thead>
    <th>注文日</th>
    <th>配送先</th>
    <th>支払方法</th>
    <th>ステータス</th>
   </thead>
   <tbody>
       <tr>
         <td><%= @order.create_at %></td>
         <td><%= @order.postal_code+@order.address+@order.name %></td>
         <td><%= @order.payment_method %></td>
         <td><%= @order.status %></td>
       </tr>
   </tbody>
</table>

  <h4>請求情報</h4>
  <table>
  <thead>
    <th>商品合計</th>
    <th>配送料</th>
    <th>ご請求額</th>
   </thead>
   <tbody>
       <tr>
         <td><%= @order.total_payment %></td>
         <td><%= @order.shipping_cost %></td>
         <td><%= @order.total_payment+@order.shipping_cost %></td>
       </tr>
   </tbody>
</table>

  <h4>注文内容</h4>
  <table>
  <thead>
    <th>商品</th>
    <th>単価（税込）</th>
    <th>個数</th>
    <th>小計</th>
   </thead>
   <tbody>
       <tr>
         <td><%= @item.name %></td>
         <td><%= @cart_item.item.with_tax_price %></td>
         <td><%= @cart_item.amont %></td>
         <td><%= @cart_item.subtotal %></td>
       </tr>
   </tbody>
</table>

