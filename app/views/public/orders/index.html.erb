<%= render 'public/homes/header' %>

<h2>注文履歴一覧</h2>
<table>
  <thead>
    <th>注文日</th>
    <th>配送先</th>
    <th>注文商品</th>
    <th>支払金額</th>
    <th>ステータス</th>
    <th>注文詳細</th>
   </thead>
   <tbody>
     <% @orders.each do |order| %>
       <tr>
         <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
         <td>
           <%= "〒"+order.postal_code %><br>
           <%= order.address %><br>
           <%= order.name %>
         </td>
         <% @items.each do |item| %>
         <td><%= item.name %></td>
         <% end %>
         <td><%= order.total_payment %></td>
         <td><%= order.status %></td>
         <td><%= link_to"表示する",public_order_path(order.id) %></td>

       </tr>
       <% end %>
   </tbody>
</table>

