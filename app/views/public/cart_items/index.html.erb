<%= render 'public/homes/header' %>

<h1>ショッピングカート</h1>
<%= button_to"カートを空にする",@cart_items.destroy_all %>
<table>
  <thead>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
   </thead>
   <tbody>
     <% @cart_items.each do |cart_item| %>
       <tr>
         <td><%= cart_item.name %></td>
         <td><%= cart_item.item.with_tax_price %></td>
         <td><%= cart_item.amount %></td>
         <td><%= cart_item.subtotal %></td>
         <td><%= link_to"削除する",destroy_cart_item_path(cart_item.id),method: :delete,"data-confirm"=>"本当に削除しますか"%></td>
         <% @合計金額 += cart_item.subtotal %>
       </tr>
       <% end %>
   </tbody>
</table>

<%= link_to"買い物を続ける",public_homes_top_path %>
<%= link_to"情報入力に進む",new_public_order_path %>

