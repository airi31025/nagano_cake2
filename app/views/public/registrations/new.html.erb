<%= render 'public/homes/header' %>
<div class="container">
  <div class="row">
<h2>新規会員登録</h2>
  </div>
 <div class="row">
<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <div class="col-sm-2 col-form-label">
  <%= f.label :姓 %><br>
  </div>
  <div class="col-sm-10">
  <%= f.text_field :last_name %>
    </div>


  <div class="col-sm-2 col-form-label">
  <%= f.label :名 %><br>
  </div>
  <div class="col-sm-10">
  <%= f.text_field :first_name %>
  </div>

  <div class="col-sm-2 col-form-label">
  <%= f.label :セイ %><br>
  </div>
  <div class="col-sm-10">
  <%= f.text_field :last_name_kana %>
  </div>

  <div class="col-sm-2 col-form-label">
  <%= f.label :メイ %><br>
  </div>
  <div class="col-sm-10">
  <%= f.text_field :first_name_kana %>
  </div>

  <div class="col-sm-2 col-form-label">
    <%= f.label :メールアドレス %><br />
    </div>
    <div class="col-sm-10">
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="col-sm-2 col-form-label">
  <%= f.label :郵便番号 %><br>
  </div>
  <div class="col-sm-10">
  <%= f.text_field :postal_code %>
  </div>

  <div class="col-sm-2 col-form-label">
  <%= f.label :住所 %><br>
  </div>
  <div class="col-sm-10">
  <%= f.text_field :address %>
  </div>

  <div class="col-sm-2 col-form-label">
  <%= f.label :電話番号 %><br>
  </div>
  <div class="col-sm-10">
  <%= f.text_field :telephone_number %>
  </div>

  <div class="col-sm-2 col-form-label">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    </div>
    <div class="col-sm-10">
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="col-sm-2 col-form-label">
    <%= f.label :パスワード確認用 %><br />
    </div>
    <div class="col-sm-10">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" ,class:"btn btn-success btn-sm"%>
  </div>
  </div>
<% end %>
</div>
<div class="row">
<h4>既に登録済みの方</h4>
</div>
<div class="row">
<%= link_to "こちら",new_customer_session_path %>
<span>からログインしてください。</span>
</div>
</div>