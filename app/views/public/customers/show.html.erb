<%= render 'public/homes/header' %>
<div class="container">
  <div class="row">
<h2>マイページ</h2>
  </div>
<h4>登録情報</h4>
<%= link_to "編集する", edit_public_customers_path,class:"btn btn-success btn-sm" %>

<h4>氏名</h4>
  <%= @customer.last_name+@customer.first_name %>
<h4>カナ</h4>
  <%= @customer.last_name_kana+@customer.first_name_kana %>
<h4>郵便番号</h4>
  <%= @customer.postal_code %>
<h4>住所</h4>
  <%= @customer.address %>
<h4>電話番号</h4>
  <%= @customer.telephone_number %>
<h4>メールアドレス</h4>
  <%= @customer.email %>

<h4>配送先</h4>
　<%= link_to"一覧を見る",public_addresses_path ,class:"btn btn-primary btn-sm"%>

<h4>注文履歴</h4>
  <%= link_to"一覧を見る",public_orders_path ,class:"btn btn-primary btn-sm"%>

</div>
