<%= render 'public/homes/header' %>
<div class="container">


      <h2>マイページ</h2>

      <h4>登録情報</h4>
      <%= link_to "編集する", edit_public_customers_path,class:"btn btn-success btn-sm" %>
      <table class="table table-bordered">
      <tbody>
      <tr>
      <th>氏名</th>
        <th><%= @customer.last_name+@customer.first_name %></th>
      </tr>
      <tr>
      <th>カナ</th>
        <th><%= @customer.last_name_kana+@customer.first_name_kana %></th>
        </tr>
      <tr>
      <th>郵便番号</th>
        <th><%= @customer.postal_code %></th>
        </tr>
        <tr>
      <th>住所</th>
        <th><%= @customer.address %></th>
        </tr>
        <tr>
      <th>電話番号</th>
        <th><%= @customer.telephone_number %></th>
        </tr>
        <tr>
      <th>メールアドレス</th>
        <th><%= @customer.email %></th>
        </tr>
        </tbody>
      </table>
      <h4>配送先</h4>
      　<%= link_to"一覧を見る",public_addresses_path ,class:"btn btn-primary btn-sm"%>

      <h4>注文履歴</h4>
        <%= link_to"一覧を見る",public_orders_path ,class:"btn btn-primary btn-sm"%>

</div>
