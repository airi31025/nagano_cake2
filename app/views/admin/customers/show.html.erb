<%= render 'admin/sessions/header' %>

<div class="container">
  <div class="row">
<h2><%= @customer.last_name+@customer.first_name %>さんの会員詳細</h2>
  </div>
<h5>会員ID</h5>
  <%= @customer.id %>
<h5>氏名</h5>
  <%= @customer.last_name+@customer.first_name %>
<h5>フリガナ</h5>
  <%= @customer.last_name_kana+@customer.first_name_kana %>
<h5>郵便番号</h5>
  <%= @customer.postal_code %>
<h5>住所</h5>
  <%= @customer.address %>
<h5>電話番号</h5>
  <%= @customer.telephone_number %>
<h5>メールアドレス</h5>
  <%= @customer.email %>
<h5>会員ステータス</h5>
  <% if @customer.is_active %>
  有効
  <% else %>
  退会
  <% end %>
  <div class="row">
<%= link_to "編集する", edit_admin_customer_path(@customer.id) ,class:"btn btn-success btn-sm" %>

<%= link_to "注文履歴一覧を見る", admin_customers_path ,class:"btn btn-primary btn-sm" %>
  </div>
</div>
