<%= render 'admin/sessions/header' %>
<div class="container">
  <div class="row">
<h2>ジャンル一覧・追加</h2>
  <%= form_with model: @genre,url:admin_genres_path do |f| %>
  </div>
  <div class="row">
  <h4>ジャンル名</h4>
    <%= f.text_field :name %>

    <%= f.submit '新規投稿' ,class:"btn btn-success btn-sm" %>
    </div>
<% end %>


<table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>ジャンル</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to"編集する",edit_admin_genre_path(genre.id) ,class:"btn btn-success btn-sm"%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>






