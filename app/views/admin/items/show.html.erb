<h2>商品詳細</h2>
<% @item.each do |item| %>

<% if item.image.attached? %>
    <%= image_tag item.image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
  <% end %>

<h4>商品名</h4>
  <%= item.title %>

<h4>商品説明</h4>
  <%= item.body %>

<h4>ジャンル</h4>
  <%= item.genre %>

<h4>税込価格</h4>
  <%= item.price %>

<h4>販売ステータス</h4>
  <%= %>

<%= link_to "編集する", edit_item_path(@item.id) %>

<% end %>