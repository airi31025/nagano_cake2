<%= render 'admin/sessions/header' %>

<h1>商品一覧</h1>
<table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
      </tr>
    </thead>
    <tbody>
      <% @items.each do |items| %>
        <tr>
          <td><%= items.id %></td>
          <td><%= link_to item.title,admin_items_path %></td>
          <td><%= items.name %></td>
          <td><%= items.price %></td>
          <td><%= items.genre_id %></td>
          <td>
            <% if items.is_active %>
            販売中
            <% else %>
            販売停止中
            <% end %>
          </td>
        </tr>
      <% end %>
      <%= paginate @items %>
    </tbody>
  </table>


